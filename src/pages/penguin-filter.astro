---
import Layout from "../layouts/Layout.astro";
---

<Layout title="TP4 – Penguins + filtre">
  <h2 style="margin:0 0 1rem">Penguins — filtre espèce</h2>

  <label for="species" style="display:block;margin:.5rem 0 1rem">
    Espèce :
    <select id="species" style="margin-left:.5rem">
      <option value="">All species</option>
      <option value="Adelie">Adelie</option>
      <option value="Chinstrap">Chinstrap</option>
      <option value="Gentoo">Gentoo</option>
    </select>
  </label>

  <div id="chart"></div>

  <script>
    import * as Plot from "@observablehq/plot";
    import penguins from "../assets/penguins.json";

    const $species = document.querySelector("#species");
    const $chart = document.querySelector("#chart");

    function renderPlot() {
      const species = $species.value;
      let data = species ? penguins.filter(d => d.species === species) : penguins;

      $chart.innerHTML = "";
      const plot = Plot.plot({
        width: 920,
        height: 500,
        x: { label: "Culmen length (mm)", grid: true },
        y: { label: "Culmen depth (mm)", grid: true },
        color: { legend: true },
        marks: [
          Plot.dot(data, {
            x: "culmen_length_mm",
            y: "culmen_depth_mm",
            stroke: "species",
            tip: true
          })
        ]
      });
      $chart.append(plot);
    }

    $species.addEventListener("change", renderPlot);
    renderPlot(); // affichage initial
  </script>
</Layout>
